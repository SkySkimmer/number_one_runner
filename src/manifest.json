{ "manifest_version": 2,
  "name": "BvS Number One Bot Runner",
  "short_name": "bvsn1runner",
  "author": "SkySkimmer",
  "homepage_url": "https://github.com/SkySkimmer/number_one_runner",
  "version": "3.0.1",

  "description": "Runs the binary number one bot for you.",

  "content_scripts": [
      {
          "matches": ["*://*.animecubed.com/billy/bvs/numberone.html"],
          "js": ["pagescript.js"]
      }
  ],


  "background": {
      "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "id": "@bvsn1runner",
      "strict_min_version": "50.0"
    }
  },

  "permissions": ["nativeMessaging"]

}
